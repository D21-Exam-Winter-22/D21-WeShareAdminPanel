<Window x:Class="D21WeShareAdminPanel.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D21WeShareAdminPanel.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TabControl Height="400">
            <TabItem Header="Group">
                <TextBlock>This is the group tab</TextBlock>
            </TabItem>

            <TabItem Header="User">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Width="400">
                        <TextBlock>First name:</TextBlock>
                        <TextBlock>Joesef</TextBlock>
                        <TextBlock>Last name:</TextBlock>
                        <TextBlock>Mandeli</TextBlock>
                    </StackPanel>
                    <StackPanel Width="400">
                        <TextBlock>Groups: </TextBlock>
                        <ListView x:Name="userIsInGroupsList">
                            
                        </ListView>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="Other">
                <TextBlock>This is the other tab</TextBlock>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
